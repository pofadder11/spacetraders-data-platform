        "rm": true,
        "rmdir": true,
        "del": true,
        "kill": true,
        "curl": true,
        "wget": true,
        "npm": true,
        "pnpm": true,
        "yarn": true,
        "python": true,
        "pip": true,
        "go": true,
        "cargo": true,
        "node": true,
        "/^Remove-Item\\b/i": true
